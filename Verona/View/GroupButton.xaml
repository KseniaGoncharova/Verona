<UserControl x:Class="Verona.View.GroupButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Verona.View"
             mc:Ignorable="d" d:DesignWidth="300" Height="35">
    <Grid>
        <Button x:Name="EnterButton" Click="EnterButton_Click"/>
        <Button x:Name="RemoveButton" Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Width="20" Height="20"
                Click="RemoveButton_Click"/>
    </Grid>
</UserControl>


